<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zhg.view.custombehavior.TextViewActivity">

    <TextView
        android:id="@+id/id_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="dependent"
        android:background="#44000000"
        android:textColor="#FF0000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/id_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:padding="20dp"
        android:text="child"
        android:background="#44000000"
        android:textColor="#FF0000"
        android:textSize="20sp"
        app:layout_behavior="com.zhg.view.custombehavior.view.DependentBehavior" />
</android.support.design.widget.CoordinatorLayout>
